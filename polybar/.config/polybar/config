[colors]
background = #000
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/mybar]
monitor = ${env:MONITOR:DP-1}
width = 100%
height = 20

background = ${colors.background}
foreground = ${colors.foreground}

module-margin-right = 2

font-0 = DejaVuSansMono Nerd Font:size=8;1
font-1 = DejaVuSansMono Nerd Font:size=8;1
font-2 = DejaVuSansMono Nerd Font:size=8;1

modules-left = i3
modules-center = 
modules-right = pulseaudio eth ip filesystem memory cpu date powermenu

tray-position = right
tray-padding = 6
tray-background = #285577
tray-scale = 1.0

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = pointer

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-background = #285577
label-focused-underline= ${colors.primary}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-background = #222222
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = #5f676a
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = #900000
label-urgent-padding = 1

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume> 
label-volume = %percentage%%

label-muted = 婢 muted
label-muted-foreground = #666

ramp-volume-0 = 奄
ramp-volume-1 = 奔
ramp-volume-2 = 墳

[module/eth]
type = internal/network
interface = eno1
interval = 3.0

label-connected = E: %local_ip%

[module/ip]
type = custom/script
exec = curl -s https://ipinfo.io/ip
interval = 90

label = IP: %output%

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = DISK: %free%

[module/date]
type = internal/date
interval = 1

date = "%Y-%m-%d"
time = %H:%M:%S

label = %date% %time%

[module/memory]
type = internal/memory
interval = 2
format = <label>
label = RAM: %percentage_used%%

[module/cpu]
type = internal/cpu
interval = 2
label = CPU: %percentage%%

[module/powermenu]
type = custom/menu

expand-right = true

format-spacing = 1

label-open = "⏻"
label-open-padding-right = 2

label-close = 

label-separator = "|"

menu-0-0 = REBOOT
menu-0-0-exec = menu-open-1
menu-0-1 = SHUTDOWN |
menu-0-1-exec = menu-open-2

menu-1-0 = CANCEL
menu-1-0-exec = menu-open-0
menu-1-1 = REBOOT
menu-1-1-exec = sudo reboot

menu-2-0 = CANCEL
menu-2-0-exec = menu-open-0
menu-2-1 = SHUTDOWN 
menu-2-1-exec = sudo poweroff

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5

